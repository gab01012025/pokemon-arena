{
  "name": "pokemon-arena",
  "version": "0.1.0",
  "private": true,
  "prisma": {
    "seed": "npx ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed-main.ts"
  },
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "postinstall": "prisma generate",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest",
    "test:run": "vitest run",
    "server": "npx ts-node --esm src/server/game-server.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run server\"",
    "db:seed": "npx ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed-main.ts",
    "db:push": "prisma db push",
    "db:reset": "npx prisma db push --force-reset --accept-data-loss && npm run db:seed",
    "vercel-build": "prisma generate && prisma db push && next build"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/uuid": "^10.0.0",
    "@vercel/postgres": "^0.10.0",
    "bcryptjs": "^3.0.3",
    "concurrently": "^9.2.1",
    "cookie": "^1.1.1",
    "dotenv": "^17.2.3",
    "jose": "^6.1.3",
    "next": "16.1.1",
    "next-auth": "^4.24.13",
    "prisma": "^5.22.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "ts-node": "^10.9.2",
    "uuid": "^13.0.0",
    "zod": "^4.3.4",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie": "^0.6.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.16"
  }
}
